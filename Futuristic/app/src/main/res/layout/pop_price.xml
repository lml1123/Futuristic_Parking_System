<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outsidePOPPrice"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/price_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/popupTitlePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Parking Fee"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/popupTitlePrice"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="per hours"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="per hours"
                android:textSize="16sp" />

            <View
                android:id="@+id/pdivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/price2"
                android:layout_marginTop="10dp"
                android:background="#E8E8E8" />

            <Button
                android:id="@+id/closePopUpPrice"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pdivider"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Cancel" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>