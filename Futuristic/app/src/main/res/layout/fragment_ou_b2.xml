<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:paddingTop="50dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line2" />

                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mall" />

                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="8dp"
                        android:paddingTop="50dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line2" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/wallleft"
                        android:layout_width="20dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/wall" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/stair"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/wallleft">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/stair" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/firstrow"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/stair"
                        android:layout_toRightOf="@id/wallleft"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/b2aRecyclerView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/secondrow"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="90dp"
                        android:layout_toRightOf="@id/stair"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/b2bRecyclerView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/thirdrow"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="90dp"
                        android:layout_toRightOf="@id/secondrow"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/b2cRecyclerView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fourthrow"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="90dp"
                        android:layout_toLeftOf="@id/wallright"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/b2dRecyclerView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wallright"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/wall" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/wall" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="100dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/wall" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>